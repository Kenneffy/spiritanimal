	app.get('/edit-sauce/:id', function(req, res){
		pg.connect(connectionString, function (err, client, done) {

			client.query('SELECT * FROM western where name = $1', [westerns_easterns[i].western_sign], function (err, western) {

				var western_id = western.rows[0].id

				client.query('SELECT * from eastern where name = $1', [westerns_easterns[i].eastern_sign], function (errr, eastern) {

					var eastern_id = eastern.rows[0].id;

					client.query('SELECT * from spirit_animals where name = $1', [westerns_easterns[i].primal_zodiac_sign], function (errr, spirit) {

						var spirit_animal_id = spirit.rows[0].id;

						client.query('INSERT INTO western_easterns (western_id, eastern_id, spirit_animal_id) VALUES ($1, $2, $3)', [western_id, eastern_id, spirit_animal_id], function (errr, spirit) {
							done();
						});

					});

				});
				
			});
		});	
	});